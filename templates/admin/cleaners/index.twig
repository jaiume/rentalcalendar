{% extends "layout.twig" %}

{% block title %}Cleaners | Admin{% endblock %}

{% block content %}
  <section class="py-5">
    <div class="container">
      <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
          <div>
            <h1 class="h2 mb-0">Cleaners</h1>
            <p class="text-muted">Manage cleaning staff</p>
          </div>
          <a href="/admin/cleaners/create" class="btn btn-primary">Add Cleaner</a>
        </div>
      </div>

      <div class="card border-0 shadow-sm">
        <div class="card-body">
          {% if cleaners|length > 0 %}
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Initials</th>
                    <th>Phone</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  {% for cleaner in cleaners %}
                    <tr>
                      <td>{{ cleaner.cleaner_name }}</td>
                      <td><code>{{ cleaner.cleaner_initials }}</code></td>
                      <td>{{ cleaner.phone ?? '-' }}</td>
                      <td>
                        <div class="btn-group btn-group-sm">
                          <a href="/admin/cleaners/{{ cleaner.cleaner_id }}/edit" class="btn btn-outline-primary">Edit</a>
                          <a href="/admin/cleaners/{{ cleaner.cleaner_id }}/delete" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this cleaner?')">Delete</a>
                        </div>
                      </td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          {% else %}
            <p class="text-muted mb-0">No cleaners found. <a href="/admin/cleaners/create">Create one</a>.</p>
          {% endif %}
        </div>
      </div>

      <div class="mt-3">
        <a href="/admin" class="text-decoration-none">‚Üê Back to Admin Dashboard</a>
      </div>
    </div>
  </section>
{% endblock %}



