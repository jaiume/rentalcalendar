{% extends "layout.twig" %}

{% block title %}{% if cleaner %}Edit{% else %}Add{% endif %} Cleaner | Admin{% endblock %}

{% block content %}
  <section class="py-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-6">
          <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
              <h1 class="h3 mb-4">{% if cleaner %}Edit{% else %}Add{% endif %} Cleaner</h1>

              {% if error %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                  {{ error }}
                  <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
              {% endif %}

              <form method="post" action="{% if cleaner %}/admin/cleaners/{{ cleaner.cleaner_id }}{% else %}/admin/cleaners{% endif %}">
                <div class="mb-3">
                  <label class="form-label" for="cleaner_name">Cleaner Name *</label>
                  <input
                    type="text"
                    class="form-control"
                    id="cleaner_name"
                    name="cleaner_name"
                    value="{{ cleaner.cleaner_name ?? '' }}"
                    required
                    maxlength="150"
                  >
                </div>

                <div class="mb-3">
                  <label class="form-label" for="cleaner_initials">Initials *</label>
                  <input
                    type="text"
                    class="form-control text-uppercase"
                    id="cleaner_initials"
                    name="cleaner_initials"
                    value="{{ cleaner.cleaner_initials ?? '' }}"
                    required
                    maxlength="5"
                    style="text-transform: uppercase;"
                  >
                  <div class="form-text">Up to 5 characters, used for calendar badges</div>
                </div>

                <div class="mb-3">
                  <label class="form-label" for="phone">Phone</label>
                  <input
                    type="tel"
                    class="form-control"
                    id="phone"
                    name="phone"
                    value="{{ cleaner.phone ?? '' }}"
                    maxlength="40"
                  >
                </div>

                <div class="d-flex gap-2">
                  <button type="submit" class="btn btn-primary">{% if cleaner %}Update{% else %}Create{% endif %} Cleaner</button>
                  <a href="/admin/cleaners" class="btn btn-outline-secondary">Cancel</a>
                </div>
              </form>
            </div>
          </div>

          <div class="mt-3">
            <a href="/admin/cleaners" class="text-decoration-none">‚Üê Back to Cleaners</a>
          </div>
        </div>
      </div>
    </div>
  </section>
  <script>
    // Auto-uppercase initials
    document.getElementById('cleaner_initials')?.addEventListener('input', function(e) {
      this.value = this.value.toUpperCase();
    });
  </script>
{% endblock %}



