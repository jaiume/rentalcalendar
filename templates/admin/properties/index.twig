{% extends "layout.twig" %}

{% block title %}Properties | Admin{% endblock %}

{% block content %}
  <section class="py-5">
    <div class="container">
      <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
          <div>
            <h1 class="h2 mb-0">Properties</h1>
            <p class="text-muted">Manage rental properties</p>
          </div>
          <a href="/admin/properties/create" class="btn btn-primary">Add Property</a>
        </div>
      </div>

      <div class="card border-0 shadow-sm">
        <div class="card-body">
          {% if properties|length > 0 %}
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Timezone</th>
                    <th>Export URL</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  {% for property in properties %}
                    <tr>
                      <td>{{ property.property_name }}</td>
                      <td>{{ property.timezone }}</td>
                      <td>
                        <div class="d-flex align-items-center gap-2">
                          <code class="small mb-0" id="export-url-{{ property.property_id }}">{{ baseUrl }}ical/{{ property.calendar_export_guid }}</code>
                          <button 
                            type="button" 
                            class="btn btn-sm btn-outline-secondary" 
                            onclick="copyExportUrl('{{ baseUrl }}ical/{{ property.calendar_export_guid }}', this)"
                            title="Copy to clipboard"
                            style="padding: 2px 8px;"
                          >
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clipboard" viewBox="0 0 16 16">
                              <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z"/>
                              <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3z"/>
                            </svg>
                          </button>
                        </div>
                      </td>
                      <td>
                        <div class="btn-group btn-group-sm">
                          <a href="/admin/properties/{{ property.property_id }}/edit" class="btn btn-outline-primary">Edit</a>
                          <a href="/admin/properties/{{ property.property_id }}/delete" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this property? This will also delete all related reservations, cleaning, and maintenance records.')">Delete</a>
                        </div>
                      </td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          {% else %}
            <p class="text-muted mb-0">No properties found. <a href="/admin/properties/create">Create one</a>.</p>
          {% endif %}
        </div>
      </div>

      <div class="mt-3">
        <a href="/admin" class="text-decoration-none">‚Üê Back to Admin Dashboard</a>
      </div>
    </div>
  </section>

  <script>
    function copyExportUrl(url, button) {
      navigator.clipboard.writeText(url).then(function() {
        // Show feedback
        const originalHTML = button.innerHTML;
        button.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16"><path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z"/></svg>';
        button.classList.remove('btn-outline-secondary');
        button.classList.add('btn-success');
        setTimeout(function() {
          button.innerHTML = originalHTML;
          button.classList.remove('btn-success');
          button.classList.add('btn-outline-secondary');
        }, 2000);
      }).catch(function(err) {
        alert('Failed to copy: ' + err);
      });
    }
  </script>
{% endblock %}



