{% extends "layout.twig" %}

{% block title %}Users | Admin{% endblock %}

{% block content %}
  <section class="py-5">
    <div class="container">
      <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
          <div>
            <h1 class="h2 mb-0">Users</h1>
            <p class="text-muted">Manage system users</p>
          </div>
          <a href="/admin/users/create" class="btn btn-primary">Add User</a>
        </div>
      </div>

      <div class="card border-0 shadow-sm">
        <div class="card-body">
          {% if users|length > 0 %}
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Email</th>
                    <th>Display Name</th>
                    <th>Admin</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  {% for user in users %}
                    <tr>
                      <td>{{ user.emailaddress }}</td>
                      <td>{{ user.display_name ?? '-' }}</td>
                      <td>
                        {% if user.is_admin %}
                          <span class="badge bg-danger">Admin</span>
                        {% else %}
                          <span class="badge bg-secondary">User</span>
                        {% endif %}
                      </td>
                      <td>
                        {% if user.is_active %}
                          <span class="badge bg-success">Active</span>
                        {% else %}
                          <span class="badge bg-warning">Disabled</span>
                        {% endif %}
                      </td>
                      <td>
                        <div class="btn-group btn-group-sm">
                          <a href="/admin/users/{{ user.user_id }}/edit" class="btn btn-outline-primary">Edit</a>
                          <a href="/admin/users/{{ user.user_id }}/toggle-active" class="btn btn-outline-{% if user.is_active %}warning{% else %}success{% endif %}">
                            {% if user.is_active %}Disable{% else %}Enable{% endif %}
                          </a>
                          <a href="/admin/users/{{ user.user_id }}/delete" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                        </div>
                      </td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          {% else %}
            <p class="text-muted mb-0">No users found. <a href="/admin/users/create">Create one</a>.</p>
          {% endif %}
        </div>
      </div>

      <div class="mt-3">
        <a href="/admin" class="text-decoration-none">‚Üê Back to Admin Dashboard</a>
      </div>
    </div>
  </section>
{% endblock %}



