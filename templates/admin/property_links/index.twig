{% extends "layout.twig" %}

{% block title %}Property Links | Admin{% endblock %}

{% block content %}
  <section class="py-5">
    <div class="container">
      <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
          <div>
            <h1 class="h2 mb-0">Property Sync Partner Links</h1>
            <p class="text-muted">Manage property calendar import links</p>
          </div>
          <a href="/admin/property-links/create" class="btn btn-primary">Add Property Link</a>
        </div>
      </div>

      <div class="card border-0 shadow-sm">
        <div class="card-body">
          {% if links|length > 0 %}
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Property</th>
                    <th>Sync Partner</th>
                    <th>Import URL</th>
                    <th>Status</th>
                    <th>Last Fetch</th>
                  </tr>
                </thead>
                <tbody>
                  {% for link in links %}
                    <tr>
                      <td>{{ link.property_name }}</td>
                      <td>{{ link.sync_partner_name }}</td>
                      <td>
                        <a href="{{ link.import_link_url }}" target="_blank" class="text-decoration-none">
                          {{ link.import_link_url|slice(0, 50) }}{% if link.import_link_url|length > 50 %}...{% endif %}
                        </a>
                      </td>
                      <td>
                        {% if link.is_active %}
                          <span class="badge bg-success">Active</span>
                        {% else %}
                          <span class="badge bg-secondary">Inactive</span>
                        {% endif %}
                      </td>
                      <td>
                        {% if link.last_fetch_at %}
                          {{ link.last_fetch_at|date('Y-m-d H:i') }}
                          {% if link.last_fetch_status %}
                            <br><small class="text-muted">{{ link.last_fetch_status }}</small>
                          {% endif %}
                        {% else %}
                          <span class="text-muted">Never</span>
                        {% endif %}
                      </td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          {% else %}
            <p class="text-muted mb-0">No property links found. <a href="/admin/property-links/create">Create one</a>.</p>
          {% endif %}
        </div>
      </div>

      <div class="mt-3">
        <a href="/admin" class="text-decoration-none">‚Üê Back to Admin Dashboard</a>
      </div>
    </div>
  </section>
{% endblock %}









