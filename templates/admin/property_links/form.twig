{% extends "layout.twig" %}

{% block title %}Add Property Link | Admin{% endblock %}

{% block content %}
  <section class="py-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-6">
          <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
              <h1 class="h3 mb-4">Add Property Sync Partner Link</h1>

              {% if error %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                  {{ error }}
                  <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
              {% endif %}

              <form method="post" action="/admin/property-links">
                <div class="mb-3">
                  <label class="form-label" for="property_id">Property *</label>
                  <select class="form-select" id="property_id" name="property_id" required>
                    <option value="">Select a property...</option>
                    {% for property in properties %}
                      <option value="{{ property.property_id }}">{{ property.property_name }}</option>
                    {% endfor %}
                  </select>
                </div>

                <div class="mb-3">
                  <label class="form-label" for="sync_partner_name">Sync Partner *</label>
                  <select class="form-select" id="sync_partner_name" name="sync_partner_name" required>
                    <option value="">Select a sync partner...</option>
                    {% for partner in partners %}
                      <option value="{{ partner }}">{{ partner }}</option>
                    {% endfor %}
                  </select>
                </div>

                <div class="mb-3">
                  <label class="form-label" for="import_link_url">Import Link URL *</label>
                  <input
                    type="url"
                    class="form-control"
                    id="import_link_url"
                    name="import_link_url"
                    required
                    placeholder="https://example.com/calendar.ics"
                  >
                  <div class="form-text">The URL to fetch calendar data from</div>
                </div>

                <div class="mb-3">
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      id="is_active"
                      name="is_active"
                      value="1"
                      checked
                    >
                    <label class="form-check-label" for="is_active">
                      Active
                    </label>
                  </div>
                </div>

                <div class="d-flex gap-2">
                  <button type="submit" class="btn btn-primary">Create Link</button>
                  <a href="/admin/property-links" class="btn btn-outline-secondary">Cancel</a>
                </div>
              </form>
            </div>
          </div>

          <div class="mt-3">
            <a href="/admin/property-links" class="text-decoration-none">‚Üê Back to Property Links</a>
          </div>
        </div>
      </div>
    </div>
  </section>
{% endblock %}

