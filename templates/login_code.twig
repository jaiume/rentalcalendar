{% extends "login_layout.twig" %}

{% block content %}
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-5 col-lg-4">
        <div class="card shadow-sm border-0">
          <div class="card-body p-4">
            <h1 class="h4 mb-4 text-center">Enter verification code</h1>
            <p class="text-muted text-center small mb-4">
              We sent a 6-digit code to your email. Enter it below to sign in.
            </p>
            {% if error %}
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ error }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
              </div>
            {% endif %}
            <form method="post" action="/login/verify" class="needs-validation" novalidate>
              <div class="mb-3">
                <label class="form-label" for="code">Verification code</label>
                <input
                  type="text"
                  class="form-control text-center"
                  id="code"
                  name="code"
                  placeholder="000000"
                  pattern="[0-9]{6}"
                  maxlength="6"
                  required
                  autofocus
                  style="font-size: 1.5rem; letter-spacing: 0.5rem;"
                >
                <div class="form-text">Enter the 6-digit code from your email</div>
              </div>
              <div class="d-grid">
                <button class="btn btn-primary" type="submit">Verify and sign in</button>
              </div>
              <div class="text-center mt-3">
                <a href="/login" class="text-decoration-none small">Back to email entry</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
    // Auto-format code input
    document.getElementById('code').addEventListener('input', function(e) {
      this.value = this.value.replace(/[^0-9]/g, '');
    });
  </script>
{% endblock %}









